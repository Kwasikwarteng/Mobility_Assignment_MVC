@model Mobility_Assignment_MVC.Models.Person;
@{
    ViewData["Title"] = "Add";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" asp-action="AddPost">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Person</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-8 form-group">
                        <label asp-for="First_Name"></label>
                        <input asp-for="First_Name" class="form-control" />
                        <span asp-validation-for="First_Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-8 form-group">
                        <label asp-for="Last_Name"></label>
                        <input asp-for="Last_Name" class="form-control" />
                        <span asp-validation-for="Last_Name" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-8 form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-8 form-group">
                        <label asp-for="Age"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>

            </div>

        </div>
        <div class="form-group row">
            <div class="col-8 offset-4 row">
            </div>
            <div class="col">
                <input type="submit" class="btn btn-info w-100" value="Add Person" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success w-100">
                    <i class="fa-solid fa-right-from-bracket"></i>   Back
                </a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
